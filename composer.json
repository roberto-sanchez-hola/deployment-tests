{
  "name": "vendor/nombre-proyecto",
  "description": "Proyecto en PHP 7.2 con herramientas de calidad de c√≥digo",
  "type": "project",
  "require": {
    "php": "^7.2"
  },
  "require-dev": {
    "phpmd/phpmd": "2.15.*",
    "phpstan/phpstan": "0.12.*",
    "sebastian/phpcpd": "4.*",
    "sebastian/version": "^2.0",
    "squizlabs/php_codesniffer": "3.6.*"
  },
  "config": {
    "platform": {
      "php": "7.2.0"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "cs": "phpcs --standard=PSR12 src",
    "md": "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode",
    "cpd": "phpcpd src --min-lines=5 --min-tokens=70",
    "stan": "phpstan analyse src --memory-limit=1G",
    "quality": [
      "@cs",
      "@md",
      "@cpd",
      "@stan"
    ]
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  }
}
